# App Settings
APP_NAME=
APP_DESCRIPTION=
APP_VERSION=1.0.0
LICENSE=MIT
CONTACT_NAME=A
CONTACT_EMAIL=

# Environment
ENVIRONMENT=local

# Security - GENERATE STRONG VALUES FOR PRODUCTION!
SECRET_KEY=your-super-secret-key-min-32-chars
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Google OAuth
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
OAUTH_REDIRECT_URI=http://localhost:8000/api/v1/auth/google/callback
FRONTEND_URL=http://localhost:3000

# Database
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your-secure-postgres-password
POSTGRES_SERVER=db
POSTGRES_PORT=5432
POSTGRES_DB=app
# Prefer a single URL in production. If set, this overrides the components above.
# Examples:
# - Local (docker-compose):
# POSTGRES_URL=postgresql://postgres:your-secure-postgres-password@db:5432/app
# - CapRover internal service name (replace <your-postgres-app>):
# POSTGRES_URL=postgresql://postgres:your-secure-postgres-password@--<your-postgres-app>:5432/app

# Admin User
ADMIN_NAME=Admin
ADMIN_EMAIL=admin@youremail.com
ADMIN_USERNAME=admin
ADMIN_PASSWORD=your-secure-admin-password-min-8-chars

# Redis Cache
REDIS_CACHE_HOST=redis
REDIS_CACHE_PORT=6379
## If your Redis requires auth, either set REDIS_CACHE_PASSWORD and DB below or
## set a full URL including password: redis://:password@host:port/0
# REDIS_CACHE_PASSWORD=
# REDIS_CACHE_DB=0
# REDIS_CACHE_URL=redis://:password@redis:6379/0
# On CapRover, prefer the service name, e.g.:
# REDIS_CACHE_URL=redis://:password@--<your-redis-app>:6379/0

# Redis Queue
REDIS_QUEUE_HOST=redis
REDIS_QUEUE_PORT=6379
## If your Redis requires auth for queue, set:
# REDIS_QUEUE_PASSWORD=
# REDIS_QUEUE_DB=1
# (Note: REDIS_QUEUE_URL is not read by app code.)

# Redis Rate Limiter
REDIS_RATE_LIMIT_HOST=redis
REDIS_RATE_LIMIT_PORT=6379
## If your Redis requires auth, either set REDIS_RATE_LIMIT_PASSWORD and DB below or
## set a full URL including password: redis://:password@host:port/2
# REDIS_RATE_LIMIT_PASSWORD=
# REDIS_RATE_LIMIT_DB=2
# REDIS_RATE_LIMIT_URL=redis://:password@redis:6379/2
# On CapRover, prefer:
# REDIS_RATE_LIMIT_URL=redis://:password@--<your-redis-app>:6379/2

# Rate Limiting
DEFAULT_RATE_LIMIT_LIMIT=100
DEFAULT_RATE_LIMIT_PERIOD=3600

# Client Cache
CLIENT_CACHE_MAX_AGE=60

# Admin Panel
CRUD_ADMIN_ENABLED=true
CRUD_ADMIN_MOUNT_PATH=/admin
CRUD_ADMIN_MAX_SESSIONS=10
CRUD_ADMIN_SESSION_TIMEOUT=1440
SESSION_SECURE_COOKIES=false
CRUD_ADMIN_TRACK_EVENTS=true
CRUD_ADMIN_TRACK_SESSIONS=true
CRUD_ADMIN_REDIS_ENABLED=false
# OAuth
# Logging
# Optional: where to push logs (Loki). Leave empty to disable.
# For CapRover, if you named the app `loki`, internal URL is:
#   http://srv-captain--loki:3100/loki/api/v1/push
LOG_LEVEL=INFO
LOKI_URL=
# Optional multi-tenant Loki: set tenant ID and/or basic auth
LOKI_TENANT_ID=
LOKI_USERNAME=
LOKI_PASSWORD=
TOGETHER_API_KEY=''
TOGETHER_EMBED_MODEL=''


